@{
    ViewData["Title"] = "Home Page";
}

<h3>Connecions</h3>
<div class="row">
    <div class="col-sm-6">
        <p style="margin-bottom:0;"># concurrent connections: <strong id="num-connected">0</strong></p>
        <p style="margin-bottom:0;"># messages received: <strong id="num-messages-received">0</strong></p>
        <p># messages sent: <strong id="num-messages-sent">0</strong></p>
    </div>
    <div class="col-sm-6">
        <button class="btn btn-primary" onclick="connect();">Connect</button>
        <button class="btn btn-success btn-sent" onclick="sendMessages();">Send messages</button>
        <button class="btn btn-success" onclick="getResult();">Get results</button>
    </div>
</div>
<div style="padding-top: 20px"></div>
<h3>Messages</h3>
<div class="row">
    <div class="col-sm-12" style="max-height: 450px; overflow-y: scroll;">
        <table class="table">
            <thead>
                <tr>
                    <th style="min-width:30px;max-width:30px;">Sender</th>
                    <th style="min-width:30px;max-width:30px;">Receiver</th>
                    <th>Message body</th>
                    <th style="min-width:30px;max-width:30px;">Received at</th>
                </tr>
            </thead>
            <tbody id="tbl-messages">
                <tr class="msg-item d-none">
                    <td class="msg-item-sender"></td>
                    <td class="msg-item-receiver"></td>
                    <td class="msg-item-messages"></td>
                    <td class="msg-item-received"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
